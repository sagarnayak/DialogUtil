<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:autofilledHighlight" tools:targetApi="o">@android:color/transparent
        </item>
    </style>

    <style name="dialogTextStyle" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/dialogPrimaryTextColor</item>
        <item name="android:textSize">@dimen/dialogTextSize</item>
    </style>

    <style name="dialogButtonStyle" parent="TextAppearance.AppCompat.Button">
        <item name="android:textColor">@color/dialogButtonTextColor</item>
        <item name="android:textSize">@dimen/dialogButtonSize</item>
    </style>
</resources>